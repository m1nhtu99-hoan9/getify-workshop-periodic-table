{
    "compilerOptions": {
        // https://stackoverflow.com/a/77103144/5936629
        "types": [
            "bun-types",
            "web"
        ],
        "lib": [
            "ES2022",
            "DOM"
        ],
        "outDir": "dist",
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "ES2017",
        "module": "ES2022",
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}